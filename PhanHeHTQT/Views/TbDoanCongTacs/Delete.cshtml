<script>
    document.addEventListener("DOMContentLoaded", () => {
        const rotatingQuestion = document.querySelector(".rotating-question");

        // Hiệu ứng xoay "?" úp vào trong rồi mở ngược ra
        let angle = 0;

        let direction = 1; // Hướng xoay

        setInterval(() => {
            angle += direction * 5;
            if (angle >= 45 || angle <= -45) {
                direction *= -1; // Đổi hướng khi đạt giới hạn
            }
            rotatingQuestion.style.transform = `rotate(${angle}deg)`;
        }, 50);
    });
</script>

